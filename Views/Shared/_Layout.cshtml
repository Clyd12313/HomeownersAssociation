<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeowners Association</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeownersAssociation.styles.css" asp-append-version="true" />

</head>

<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm  navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow oswald-subheading " >
            <div class="container-fluid mx-3 mx-lg-5 mx-md-4" >
                <a class="navbar-brand oswald-heading fs-1" style="letter-spacing: 5px;" asp-area="" asp-controller="Home" asp-action="Index">747HOA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav me-auto">
                        <!-- Left side empty for brand -->
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold nav-hover" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Announcements"
                                asp-action="Index">Announcements</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Our Community</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-bold" >Contact Us</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
        
    </header>
    
    

    <div>
        <main role="main" >
            
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-body-tertiary text-muted">
        <!-- Section: Links  -->
        <section class="bg-dark text-light py-1 oswald-subheading">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-white text-uppercase fs-5 fw-bold mb-4 oswald-heading" style="letter-spacing: 1px;">
                            747 Homeowners Association
                        </h6>
                        <p>
                            Sanciangko St,
                        </p>
                        <p>Cebu City,</p>
                        <p>6000 Cebu</p>
                    </div>
                    <!-- Grid column -->
                    
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="  mb-4 oswald-heading" style="letter-spacing: 1px;">
                            Community Links
                        </h6>
                        <p>
                            <a href="#!" class="text-reset" style="text-decoration: none;">Home Page</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset text-capitalize" style="text-decoration: none;">discussions</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset text-capitalize" style="text-decoration: none;"> events</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset text-capitalize" style="text-decoration: none;">community guidelines</a>
                        </p>
                    </div>
                    <!-- Grid column -->

                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-capitalize mb-4 oswald-heading" style="letter-spacing: 1px;">
                            My Account
                        </h6>
                        <p>
                            <a href="#!" class="text-reset" style="text-decoration: none;">Login</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset"style="text-decoration: none;">My Profile</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset"style="text-decoration: none;">Forgot Password?</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset"style="text-decoration: none;">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->

                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-md-0 mb-4 oswald-light" style="font-size: 0.8rem;">
                        <!-- Links -->
                        <p><a class="text-white link-underline-dark " style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy Policy</a></p>

                        <p><a class=" text-white link-underline-dark" style="text-decoration: none;"  asp-area="" asp-controller="Home" asp-action="TermsAndConditions">Terms & Conditions</a></p>
                    </div>

                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->

        <!-- Copyright -->
        <div class="text-center p-2 lora-body " style="background-color: rgba(0, 0, 0, 0.05); font-size: 0.8rem;">
            © 2025 Copyright:
            <a class="text-reset fw-bold" href="https://mdbootstrap.com/">747 Group</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
