@model HomeownersAssociation.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="my-5 d-flex align-items-center justify-content-center" style="height: 80vh;">
    <div class="row justify-content-center" >
        <div class=" col-10 col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h2 class="text-center oswald-heading">@ViewData["Title"]</h2>
                    <p class="text-center mb-0 oswald-light">Create a new account for the Homeowners Association</p>
                </div>
                <div class="card-body lora-body">
                    <form id="registerForm" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="oswald-subheading">Personal Information</h4>
                                <hr />
                                <div class="form-floating mb-3">
                                    <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                                    <label asp-for="FirstName"></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                                    <label asp-for="LastName"></label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="oswald-subheading">Property Information</h4>
                                <hr />
                                <div class="form-floating mb-3">
                                    <input asp-for="Address" class="form-control" aria-required="true" />
                                    <label asp-for="Address"></label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="LotNumber" class="form-control" aria-required="true" />
                                    <label asp-for="LotNumber"></label>
                                    <span asp-validation-for="LotNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="BlockNumber" class="form-control" aria-required="true" />
                                    <label asp-for="BlockNumber"></label>
                                    <span asp-validation-for="BlockNumber" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProfilePicture" class="form-label"></label>
                                    <input asp-for="ProfilePicture" type="file" class="form-control" />
                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-info alert-gray">
                            <i class="bi bi-info-circle"></i> <span class="lora-bold">Your account will need to be approved by an administrator before you can log in.</span>
                        </div>
                        
                        <div class="d-grid col-6 offset-3 gap-2 mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-md bg-dark text-white oswald-subheading">Register</button>
                        </div>
                        <div class="mt-3 text-center">
                            <p>
                                Already have an account? <a asp-action="Login" class="lora-italic text-gray">Log in</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}