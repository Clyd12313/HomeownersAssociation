@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section position-relative mb-5 w-100">
    <div class="hero-image" style="background-image: url('/images/wallpaperflare.com_wallpaper.jpg'); height: 600px; background-size: cover; background-position: center;"></div>
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white w-75">
        <h1 class="display-4 fw-bold oswald-heading mb-3" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">747 Homeowners Association</h1>
        <p class="fs-5 mb-4 oswald-subheading" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);">A premier community in the heart of Cebu City</p>
        <a class="btn btn-lg btn-dark" href="#about">Learn More</a>
    </div>
</div>

<!-- Welcome Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold oswald-heading mb-4">Welcome to Our Community</h2>
                <p class="lora-body">The 747 Homeowners Association is dedicated to maintaining the highest standards of community living. Our association works tirelessly to ensure a safe, beautiful, and harmonious environment for all residents.</p>
                <p class="lora-body">Located in the heart of Cebu City, our community offers exceptional amenities, well-maintained common areas, and a strong sense of belonging.</p>
                <div class="mt-4">
                    <a asp-controller="Announcements" asp-action="Index" class="btn btn-outline-dark me-2">Community Announcements</a>
                    @if (User?.Identity?.IsAuthenticated != true)
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-dark">Resident Login</a>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <img src="/img/community-image.jpg" class="img-fluid rounded shadow" alt="Community Image">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold oswald-heading mb-5">Community Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check fs-1 text-primary mb-3"></i>
                        <h5 class="card-title oswald-subheading">Security</h5>
                        <p class="card-text lora-body">24/7 security personnel and CCTV monitoring throughout the community for your peace of mind.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-tree fs-1 text-success mb-3"></i>
                        <h5 class="card-title oswald-subheading">Landscaped Gardens</h5>
                        <p class="card-text lora-body">Beautifully maintained gardens and green spaces for residents to enjoy.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1 text-warning mb-3"></i>
                        <h5 class="card-title oswald-subheading">Community Events</h5>
                        <p class="card-text lora-body">Regular social events and activities that foster a strong community spirit.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Announcements Preview -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold oswald-heading mb-4">Stay Informed</h2>
                <p class="lora-body">Keep up with the latest news and announcements from the association. From community events to maintenance schedules, we make sure you're always in the loop.</p>
                <a asp-controller="Announcements" asp-action="Index" class="btn btn-dark mt-3">View All Announcements</a>
            </div>
            <div class="col-md-6">
                <div class="card border-primary shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Recent Announcements</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Community Meeting</h6>
                                    <small>3 days ago</small>
                                </div>
                                <p class="mb-1 text-truncate">Join us for the monthly community meeting this Saturday at 10 AM.</p>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Garden Maintenance</h6>
                                    <small>1 week ago</small>
                                </div>
                                <p class="mb-1 text-truncate">Scheduled maintenance for the community gardens next week.</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        <h2 class="fw-bold oswald-heading mb-4">Join Our Community</h2>
        <p class="lora-body mx-auto" style="max-width: 700px;">Interested in becoming part of our vibrant community? Contact us to learn about available properties and how to join the 747 Homeowners Association.</p>
        <a href="#" class="btn btn-light btn-lg mt-3">Contact Us</a>
    </div>
</section>

